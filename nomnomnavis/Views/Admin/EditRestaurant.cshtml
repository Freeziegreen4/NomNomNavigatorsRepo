@model nomnomnavis.Models.Restaurant
<h2>@(Model.Id == 0 ? "Add" : "Edit") Restaurant</h2>

<form asp-action="@(Model.Id == 0 ? "AddRestaurant" : "EditRestaurant")" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cuisine</label>
        <input asp-for="Cuisine" class="form-control" />
    </div>
    <div class="form-group">
        <label>Hours</label>
        <input asp-for="Hours" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
