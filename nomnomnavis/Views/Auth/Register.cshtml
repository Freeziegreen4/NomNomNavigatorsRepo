@model nomnomnavis.Models.User
@{
    ViewBag.Title = "Register";
}
<h2>Register</h2>
<form asp-action="Register" method="post">
    @if (ViewBag.UsernameUsed)
    {
        <h2 class="text-danger">Username taken. Must be unique!</h2>
    }
    @if (ViewBag.Invalid)
    {
        <h2 class="text-danger">Please ensure all fields are complete!</h2>
    }
    <label>Username</label>
    <input asp-for="Username" class="form-control" />
    <label>Password</label>
    <input asp-for="Password" type="password" class="form-control" />
    <label>Role</label>
    <select asp-for="Role" class="form-control">
        <option>User</option>
        <option>Admin</option>
    </select>
    <button class="btn btn-success mt-2">Register</button>
</form>
